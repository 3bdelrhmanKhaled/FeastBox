@model OrderViewModel

@{
    ViewBag.Title = "Create Order";
}

<div class="container my-4">
    <h1 class="text-center mb-4">Create Order</h1>

    <div class="row">
        @foreach (Product product in @Model.Products)
        {
            <div class="col-md-4 mb-4">
                <form asp-action="AddItem" method="post">
                    <div class="card h-100">
                        <img src="@Url.Content("~/images/" + product?.ImageUrl)" class="card-img-top fixed-image-height" alt="@product.Description">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Price.ToString("C")</p>
                            <input type="hidden" value="@product.ProductId" name="prodId" />
                            <input type="number" name="prodQty" class="form-control mb-3" min="1" placeholder="Quantity" required />
                            <button class="btn btn-info mt-auto" type="submit">Add</button>
                        </div>
                    </div>
                </form>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #f7f7f7;
    }

    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .fixed-image-height {
        height: 200px; 
        object-fit: cover; 
    }
</style>
