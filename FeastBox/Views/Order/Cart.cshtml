@model OrderViewModel

<h1 class="text-center my-4">My Cart</h1>

<form asp-action="PlaceOrder" method="post" class="container">
    <h3 class="text-muted">Order Items</h3>
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.OrderItems.Count; i++)
            {
                <tr>
                    <td>@Model.OrderItems[i].ProductName</td>
                    <td>
                        <input asp-for="OrderItems[i].Quantity" type="number" class="form-control" min="1" style="width: 80px;" />
                    </td>
                    <td>@Model.OrderItems[i].Price.ToString("C")</td>
                    <td>@(Model.OrderItems[i].Price * Model.OrderItems[i].Quantity)</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-center my-4">
        <input type="submit" value="Place Order" class="btn btn-success btn-lg" />
    </div>
</form>

<style>
    body {
        background-color: #f9f9f9;
    }
    .table th, .table td {
        vertical-align: middle;
    }
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }
</style>
