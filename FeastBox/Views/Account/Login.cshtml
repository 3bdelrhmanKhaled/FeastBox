@model FeastBox.ViewModels.LoginViewModels

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            background-color: #f7f7f7;
        }

        .login-card {
            margin-top: 50px;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
        }

        .login-title {
            font-size: 30px;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
        }

        .form-control {
            position: relative;
        }

            .form-control::placeholder {
                color: #aaa;
            }

        .form-label {
            position: absolute;
            left: 20px;
            top: 8px;
            transition: all 0.2s;
            opacity: 0.5;
        }

        .form-control:focus + .form-label,
        .form-control:not(:placeholder-shown) + .form-label {
            top: -10px;
            left: 5px;
            font-size: 12px;
            opacity: 1;
            color: #007bff;
        }

        .food-icon {
            font-size: 20px; 
            color: #007bff; 
            display: block;
            margin: 0 auto 20px; 
        }
    </style>
</head>
<body>
    <div class="container d-flex align-items-center justify-content-center vh-100">
        <div class="card login-card">
            <div class="card-body">
                <i class="fas fa-utensils food-icon"></i> 
                <h3 class="login-title">Login</h3>
                <form asp-action="Login" method="post">
                    <div class="mb-3 position-relative">
                        <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" placeholder=" " required>
                        <label for="email" class="form-label">Email address</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3 position-relative">
                        <input type="password" class="form-control" id="password" name="Password" placeholder=" " required>
                        <label for="password" class="form-label">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="rememberMe" name="RememberMe" />
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </form>
                <div class="text-center mt-3">
                    <a asp-area="Identity" asp-page="/Account/Register">Don't have an account? Sign up</a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
